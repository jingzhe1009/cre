            #{item.userId,jdbcType=VARCHAR},
            #{item.deptId,jdbcType=VARCHAR}
            from dual
        </foreach>) A
    </insert>
    <insert id="insertBatchUserChannel" parameterType="java.util.List">
        insert into CRE_AUTH_USER_CHAN (
